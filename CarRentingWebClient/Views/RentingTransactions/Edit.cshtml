@model BusinessObjects.RentingTransaction

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Renting Transaction</h4>
<div>
    <a asp-action="TransactionHistory">Back to List</a>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RentingTransationId" />
            <div class="form-group mb-3">
                <label asp-for="RentingDate" class="control-label"></label>
                <input asp-for="RentingDate" class="form-control" />
                <span asp-validation-for="RentingDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TotalPrice" class="control-label"></label>
                <input asp-for="TotalPrice" class="form-control disabled" />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CustomerId" class="control-label">Customer Name</label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="RentingStatus" class="control-label"></label>
                <input asp-for="RentingStatus" class="form-control" />
                <span asp-validation-for="RentingStatus" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Save" class="btn btn-light btn-outline-primary col-12" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
