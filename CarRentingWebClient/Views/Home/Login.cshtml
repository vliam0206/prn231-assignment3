@{
    ViewData["Title"] = "Login Page";
}
@model LoginModel

<div class="text-end">
    <a asp-action="Register" class="btn btn-light btn-outline-primary"> Register </a>
</div>

<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
                <div class="card-body p-5">
                    <h3 class="card-title">Login</h3>
                    <p class="text-danger">@ViewData["Message"]</p>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    @*<div class="col-9">*@
                    <form method="post" action="Login">
                        <div class="mt-3 mb-3">
                            <label asp-for="@Model.Email" class="form-label"></label>
                            <input asp-for="@Model.Email" class="form-control" type="email" />
                            <span asp-validation-for="@Model.Email" class="text-danger form-text"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.Password" class="form-label"></label>
                            <input asp-for="@Model.Password" class="form-control" type="password" />
                            <span asp-validation-for="@Model.Password" class="text-danger form-text"></span>
                        </div>
                        <!-- Checkbox -->
                        <div class="form-check d-flex justify-content-start mb-4">
                            <input asp-for="@Model.IsRemember" class="form-check-input me-2" type="checkbox" checked="checked" id="form1Example3" />
                            <label asp-for="@Model.IsRemember" class="form-check-label" for="form1Example3"> Remember me </label>
                        </div>
                        <div class="mb-1">
                            <input class="btn btn-light btn-outline-primary col-12" type="submit" value="Login" />
                        </div>
                        <hr class="my-4">
                        <div class="row justify-content-center">
                            <a asp-action="Register">Not have account yet? Register.</a>
                        </div>
                    </form>
                    @*</div>*@
                </div>
            </div>
        </div>
    </div>
</div>

